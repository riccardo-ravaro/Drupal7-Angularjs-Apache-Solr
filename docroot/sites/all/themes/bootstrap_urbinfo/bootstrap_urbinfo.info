name = Urbinfo
description = Urbinfo Bootstrap Sub-theme
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer_first]   = 'Footer first'
regions[footer_second]  = 'Footer second'
regions[footer_third]   = 'Footer third'
regions[footer_bottom]  = 'Footer bottom'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'
regions[login]          = 'Login'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

; Main stylesheet is added conditionally for locale text direction.

stylesheets[all][] = 'js/libraries/leaflet.awesome-markers/dist/leaflet.awesome-markers.css


; Third party components stylesheets.
stylesheets[all][] = 'bower_components/slick-carousel/slick/slick.css'
stylesheets[all][] = 'bower_components/ngDialog/css/ngDialog.min.css'
stylesheets[all][] = 'bower_components/angular-bootstrap-datetimepicker/src/css/datetimepicker.css'
;;;;;;;;;;;;;;;;;;;;;
;; Excludes
;;;;;;;;;;;;;;;;;;;;;

; Remove rtl versions of default styles removed in base theme.
exclude[css][] = 'misc/vertical-tabs-rtl.css'
exclude[css][] = 'modules/aggregator/aggregator-rtl.css'
exclude[css][] = 'modules/book/book-rtl.css'
exclude[css][] = 'modules/comment/comment-rtl.css'
exclude[css][] = 'modules/dblog/dblog-rtl.css'
exclude[css][] = 'modules/file/file-rtl.css'
exclude[css][] = 'modules/forum/forum-rtl.css'
exclude[css][] = 'modules/help/help-rtl.css'
exclude[css][] = 'modules/openid/openid-rtl.css'
exclude[css][] = 'modules/poll/poll-rtl.css'
exclude[css][] = 'modules/search/search-rtl.css'
exclude[css][] = 'modules/system/system.menus-rtl.css'
exclude[css][] = 'modules/system/system.messages-rtl.css'
exclude[css][] = 'modules/system/system.theme-rtl.css'
exclude[css][] = 'modules/update/update-rtl.css'
exclude[css][] = 'modules/user/user-rtl.css'

exclude[css][] = 'modules/locale/locale.css'
exclude[css][] = 'modules/locale/locale-rtl.css'
exclude[css][] = 'sites/all/modules/contrib/ctools/css/ctools.css'
exclude[css][] = 'sites/all/modules/contrib/panels/css/panels.css'
exclude[css][] = 'sites/all/modules/contrib/panels/plugins/layouts/flexible/flexible.css'



;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

; Modernizr custom build
scripts[] = 'js/modernizr.min.js'

; Polyfill
scripts[] = 'js/placeholders.jquery.min.js'

; Bootstrap JS components
;scripts[] = 'bower_components/bootstrap/js/affix.js'
scripts[] = 'bower_components/bootstrap/js/alert.js'
scripts[] = 'bower_components/bootstrap/js/button.js'
;scripts[] = 'bower_components/bootstrap/js/carousel.js'
scripts[] = 'bower_components/bootstrap/js/collapse.js'
scripts[] = 'bower_components/bootstrap/js/dropdown.js'
scripts[] = 'bower_components/bootstrap/js/modal.js'
scripts[] = 'bower_components/bootstrap/js/tooltip.js'
;scripts[] = 'bower_components/bootstrap/js/popover.js'
;scripts[] = 'bower_components/bootstrap/js/scrollspy.js'
scripts[] = 'bower_components/bootstrap/js/tab.js'
scripts[] = 'bower_components/bootstrap/js/transition.js'

; Other JS libraries
;scripts[] = 'vendors/slick/slick.min.js'
scripts[] = 'bower_components/bxslider-4/jquery.bxslider.min.js'
scripts[] = 'bower_components/isotope/dist/isotope.pkgd.min.js'
scripts[] = 'bower_components/typeahead.js/dist/typeahead.jquery.min.js'
scripts[] = 'bower_components/leaflet/dist/leaflet.js'
scripts[] = 'bower_components/Leaflet.awesome-markers/dist/leaflet.awesome-markers.min.js'
scripts[] = 'bower_components/Leaflet.encoded/Polyline.encoded.js'

; Note: shim.js MUST BE PLACED BEFORE angular.js and angular-file-upload.js AFTER angular.js
scripts[] = 'bower_components/ng-file-upload/angular-file-upload-shim.min.js'

; Angular JS library and additional modules
scripts[] = 'bower_components/angular/angular.min.js'
scripts[] = 'bower_components/angular-cookies/angular-cookies.min.js'
scripts[] = 'bower_components/angular-isotope/dist/angular-isotope.min.js'
scripts[] = 'bower_components/angular-leaflet-directive/dist/angular-leaflet-directive.js'
scripts[] = 'bower_components/angular-resource/angular-resource.min.js'
scripts[] = 'bower_components/angular-sanitize/angular-sanitize.min.js'
scripts[] = 'bower_components/angular-touch/angular-touch.min.js'
scripts[] = 'bower_components/angular-ui-bootstrap/dist/ui-bootstrap-custom-tpls-0.11.2.min.js'
scripts[] = 'bower_components/ng-file-upload/angular-file-upload.min.js'
scripts[] = 'bower_components/ng-sortable/dist/ng-sortable.min.js'
scripts[] = 'bower_components/ng-ckeditor/ng-ckeditor.min.js'
scripts[] = 'bower_components/ngDialog/js/ngDialog.min.js'
scripts[] = 'bower_components/moment/moment.js'
scripts[] = 'bower_components/angular-bootstrap-datetimepicker/src/js/datetimepicker.js'
scripts[] = 'bower_components/slick-carousel/slick/slick.js'

; Urbinfo Angular JS app
scripts[] = 'app/dist/app.min.js'

; Theme JS behaviors
scripts[] = 'js/behaviors.js'

;;;;;;;;;;;;;;;;;;;;;
;; Settings
;;;;;;;;;;;;;;;;;;;;;

; Disable BootstrapCDN if using Bootstrap source files in your sub-theme.
settings[bootstrap_cdn] = ''

; Urbinfo App settings.
settings[bootstrap_urbinfo_map_default_zoom] = '10'
settings[bootstrap_urbinfo_map_max_zoom] = '15'
settings[bootstrap_urbinfo_map_min_zoom] = '5'
settings[bootstrap_urbinfo_map_tile_layer] = 'http://{s}.tiles.mapbox.com/v3/riccardoravaro.j8mm92f1/{z}/{x}/{y}.png'
settings[bootstrap_urbinfo_map_marker_color] = 'blue'
settings[bootstrap_urbinfo_map_marker_color_active] = 'red'
settings[bootstrap_urbinfo_location_point_distance] = '30'
